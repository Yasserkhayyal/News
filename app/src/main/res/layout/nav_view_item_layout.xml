<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/nav_view_item_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/nav_view_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nav_view_item_image"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_alignLeft="@+id/nav_view_item_image"
        android:layout_alignRight="@+id/nav_view_item_image"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:textSize="12sp"/>

</RelativeLayout>