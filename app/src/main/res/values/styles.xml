<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- MainActivity Theme -->
    <style name="MainActivityTheme" parent="AppTheme">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="Toolbar.Theme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="NavigationViewTheme" parent="ThemeOverlay.AppCompat.Dark"/>

    <!-- DrawerArrow defined behaviour and color -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ShadowOverlayText">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>


</resources>
